@{
    ViewBag.Title = "Empleados";
}

<style>
    /* Estilos personalizados */
    body {
        background-color: #f8f9fa; /* Color de fondo suave */
    }

    h2, h3 {
        color: #343a40; /* Color del texto */
        text-align: center; /* Centrar los encabezados */
    }

    .form-control {
        border-radius: 0.25rem; /* Bordes redondeados */
    }

    .btn-primary {
        background-color: #007bff; /* Color del botón */
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Color del botón al pasar el mouse */
        }

    .table {
        margin-top: 20px; /* Espacio superior para la tabla */
    }

    .container {
        max-width: 600px; /* Ancho máximo del formulario */
        margin: auto; /* Centrar el formulario */
    }

    .card {
        margin-top: 20px; /* Espacio superior para la tarjeta */
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Empleados</h2>
        </div>
        <div class="card-body">
            <!-- Formulario para ingresar datos del empleado -->
            <form asp-action="CrearEmpleado" method="post">
                <div class="form-group">
                    <label for="PNU">Primer Nombre</label>
                    <input type="text" class="form-control" id="PNU" name="PNU" required />
                </div>
                <div class="form-group">
                    <label for="SNU">Segundo Nombre</label>
                    <input type="text" class="form-control" id="SNU" name="SNU" />
                </div>
                <div class="form-group">
                    <label for="PAU">Primer Apellido</label>
                    <input type="text" class="form-control" id="PAU" name="PAU" required />
                </div>
                <div class="form-group">
                    <label for="SAU">Segundo Apellido</label>
                    <input type="text" class="form-control" id="SAU" name="SAU" />
                </div>
                <div class="form-group">
                    <label for="Cedula">Cédula</label>
                    <input type="text" class="form-control" id="Cedula" name="Cedula" required pattern="\d{3}-\d{6}-\d{4}[A-Z]" />
                </div>
                <div class="form-group">
                    <label for="IdUniversidad">Universidad</label>
                    <select class="form-control" id="IdUniversidad" name="IdUniversidad" required>
                        <!-- Aquí deberías llenar el select con las universidades disponibles -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="IdEscuela">Escuela</label>
                    <select class="form-control" id="IdEscuela" name="IdEscuela">
                        <!-- Aquí deberías llenar el select con las escuelas disponibles -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="IdCargo">Cargo</label>
                    <select class="form-control" id="IdCargo" name="IdCargo" required>
                        <!-- Aquí deberías llenar el select con los cargos disponibles -->
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Crear Empleado</button>
            </form>
        </div>
    </div>

    <!-- Tabla para mostrar los empleados -->
    <div class="card mt-4">
        <div class="card-header">
            <h3>Lista de Empleados</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nombre Completo</th>
                        <th>Cédula</th>
                        <th>Universidad</th>
                        <th>Escuela</th>
                        <th>Cargo</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se llenarán los datos de los empleados -->
                </tbody>
            </table>
        </div>
    </div>
</div>
