<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/Styles.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            overflow: hidden; /* Evita el scroll en el body */
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1000;
            margin-bottom: 20px;
        }

        .sidebar {
            background-color: #343a40;
            color: white;
            padding: 15px;
            min-width: 200px;
            height: 100vh;
            position: fixed; /* Fija la barra lateral */
            overflow-y: auto; /* Permite el scroll en la barra lateral si es necesario */
        }

            .sidebar h4 {
                color: #ffffff;
            }

            .sidebar .nav-link {
                color: #ffffff;
                padding: 10px 15px;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

        .body-content {
            margin-left: 220px; /* Espacio para la barra lateral */
            padding: 15px;
            height: calc(100vh - 60px); /* Altura ajustada para evitar el scroll */
            overflow-y: auto; /* Permite el scroll en el contenido principal */
        }

        footer {
            text-align: center;
            margin-top: 20px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Seguros Vehiculos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Login", "Login", "UserPerfile", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="sidebar" id="sidebar">
        <h4>Menu</h4>
        <ul class="navbar-nav" style="list-style-type: none; padding: 0;">
            <li class="nav-item">@Html.ActionLink("Ingresar Conductor", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Ingresar Vehiculo", "Vehiculo", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Poliza", "Poliza", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Charts", "Charts", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Accidente", "Accidente", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Terceros", "Terceros", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("VehiculosTerceros", "VehiculosTerceros", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
    </div>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
